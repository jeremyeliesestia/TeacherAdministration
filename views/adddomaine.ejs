<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ajouter un Domaine</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Icônes -->
  <link rel="stylesheet" href="/css/styles.css"> <!-- Lien vers votre fichier CSS global -->
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Ajouter un Domaine</h1>
    
    <form action="/adddomaine" method="POST" class="mb-4">
      <!-- Boutons -->
      <div class="btn-group-vertical">
        <button type="submit" class="btn-grad">Nouveau</button>
        <a href="/domaine" class="btn-grad">Retour</a>
      </div>
        <div class="form-group">
            <label for="matiere_id">Matière :</label>
            <select id="matiere_id" name="matiere_id" class="form-control" required>
              <% matieres.forEach(matiere => { %>
                <option value="<%= matiere.id %>"><%= matiere.nom %></option>
              <% }); %>
            </select>
        </div>

        <div class="form-group">
            <label for="nom">Nom :</label>
            <input type="text" id="nom" name="nom" class="form-control" required>
        </div>
    </form>
  </div>

  <!-- Scripts JS de Bootstrap -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
